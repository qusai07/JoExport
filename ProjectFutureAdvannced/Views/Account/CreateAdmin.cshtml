@model RegisterAdminViewModel
@{
    ViewBag.Title = "Create Admin";
    Layout = "~/Views/Shared/_LayoutLoginSignUp.cshtml";
}
<section class="sectionAccount">
    <div class="container h-100 d-flex justify-content-center align-items-start">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body">
                        <div class="row justify-content-center pt-3 pb-3">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 ">

                                <p class="text-center h1 fw-bold mx-1 mx-md-4 mt-3">SIGN UP ADMIN</p>

                                <form class="mx-1 p-3 mx-md-4" asp-action="CreateAdmin" asp-controller="Account" enctype="multipart/form-data" method="post">

                                    <div class="d-flex flex-row align-items-start mb-4 flex-column">
                                        <div class="d-flex align-items-center w-100">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example1c" asp-for="Name" class="form-control" />
                                                <label class="form-label " for="form3Example1c" asp-for="Name">Your Name</label>
                                            </div>
                                        </div>
                                        <span class="text-danger ml" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="d-flex flex-row align-items-start mb-4 flex-column">
                                        <div class="d-flex align-items-center w-100">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="form3Example3c" asp-for="Email" class="form-control" />
                                                <label class="form-label " for="form3Example3c" asp-for="Email">Your Email</label>
                                            </div>
                                        </div>
                                        <span class="text-danger ml" asp-validation-for="Email"></span>
                                    </div>

                                    <div class="d-flex flex-row align-items-start mb-4 flex-column">
                                        <div class="d-flex align-items-center w-100">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="form3Example4c" asp-for="Password" class="form-control" />
                                                <label class="form-label " for="form3Example4c" asp-for="Password">Password</label>
                                            </div>
                                        </div>
                                        <span class="text-danger ml" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="d-flex flex-row align-items-start mb-4 flex-column">
                                        <div class="d-flex align-items-center w-100">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="password" id="form3Example4cd" asp-for="ConfirmPassword" class="form-control" />
                                                <label class="form-label " for="form3Example4cd" asp-for="ConfirmPassword">Repeat your password</label>
                                            </div>
                                        </div>
                                        <span class="text-danger ml" asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                                    <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-block">Sign In</a>
                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>