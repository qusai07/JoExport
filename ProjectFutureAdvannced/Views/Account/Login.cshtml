@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginSignUp.cshtml";
}
<section class="sectionAccount ">
    <div class="container h-100 d-flex justify-content-center align-items-center">
        <div class="row d-flex align-items-center rounded-5 justify-content-center pt-3 pb-3" style="background-color:white">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <p class="text-center h1 fw-bold mx-1 mx-md-4 ">SIGN IN</p>
                <form class="p-4" asp-action="Login" asp-controller="Account" enctype="multipart/form-data" method="post">
                    <!-- Email input -->
                    <div class="d-flex flex-row align-items-start mb-1 flex-column">
                        <div class="d-flex flex-row align-items-center w-100">
                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                            <div class="form-outline mb-1">
                                <input type="email" id="form1Example13" asp-for="Email" class="form-control form-control-lg" />
                                <label class="form-label" for="form1Example13" asp-for="Email">Email address</label>
                            </div>
                        </div>

                        <span class="text-danger ml" asp-validation-for="Email"></span>
                    </div>

                    <!-- Password input -->
                    <div class="d-flex flex-row align-items-start mb-1 flex-column">
                        <div class="d-flex flex-row align-items-center w-100">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <div class="form-outline mb-1">
                                <input asp-for="Password" type="password" id="form1Example23" class="form-control form-control-lg" />
                                <label class="form-label" for="form1Example23" asp-for="Password">Password</label>
                            </div>
                        </div>
                        <span class="text-danger ml" asp-validation-for="Password"></span>

                    </div>
                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">

                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                    <div class="d-flex justify-content-end align-items-center my-1">
                        <a asp-action="Create" asp-controller="Account" class="btn-block">create New Account!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>