@model ProjectFutureAdvannced.ViewModels.UserViewModel.GeneralInfoUser
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="profiles" style="margin:100px 0px">
    <div class="container mt-5 mb-5">
        <div class="boxPorfile d-flex w-100">
            <div class="boxPorfile1">
                <div class="account mb-4 p-4 d-flex justify-content-center align-items-center flex-column">
                    <div class="imgaccount">
                        @{
                            var user = await userManager.GetUserAsync(User);
                            var img = "/AccountImg/" + user.ImgUrl;
                                <img src="@img" />
                            var userr = userRepo.GetByFk(user.Id);

                        }
                    </div>
                    <div class="infoAccount text-center">
                        <h3>@user.UserName</h3>
                        <p>@userr.Major</p>
                    </div>
                </div>
                <div class="list-group">
                    <a asp-action="GeneralUserProfile" asp-controller="User" class="list-group-item list-group-item-action"> <i class="fas fa-fw fa-user"></i> General Information</a>
                    <a asp-controller="User" asp-action="SecurityUser" class="list-group-item list-group-item-action"><i class="fa fa-user-secret" aria-hidden="true"></i> Security Information</a>
                    <a asp-action="listCart" asp-controller="User" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-cart-shopping"></i> Cart
                    </a>
                    <a asp-action="MyWishlist" asp-controller="User" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-list"></i> My Wishlist
                    </a>
                    <a asp-action="Logout" asp-controller="Account" class="list-group-item list-group-item-action">
                        <i class="fa fa-external-link" aria-hidden="true"></i> Remove Account
                    </a>
                    <a asp-action="Logout" asp-controller="Account" class="list-group-item list-group-item-action">
                        <i class="fa fa-external-link" aria-hidden="true"></i> Log Out
                    </a>
                </div>
            </div>
            <form class="boxPorfile2" asp-action="GeneralUserProfile" asp-controller="User" enctype="multipart/form-data" method="post">
                <div class="row BasicInfo mb-5">
                    <h6 class="col-12">GENERAL INFORMATION</h6>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="Name">Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="Email">Email Address</label>
                        <input type="email" class="form-control" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3 gap-3 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="Gender">Gender</label>
                        <div class="d-flex" style="gap:20px">
                            <div class="form-check">
                                <input class="form-check-input d-flex justify-content-center align-items-center" asp-for="Gender" type="radio" value="Male" id="flexRadioDefault1">
                                <label class="form-check-label" asp-for="Gender" for="flexRadioDefault1">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input d-flex justify-content-center align-items-center" type="radio" asp-for="Gender" value="Female" id="flexRadioDefault2">
                                <label class="form-check-label" for="flexRadioDefault2" asp-for="Gender">
                                    Female
                                </label>
                                <span class="text-danger" asp-validation-for="Gender"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="PhoneNumber">PhoneNumber</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber">
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <div class="mb-3">
                            <label for="formFile" asp-for="ImgUser" class="form-label">Your Image</label>
                            <input class="form-control" asp-for="ImgUser" type="file" id="formFile">
                        </div>
                        <span class="text-danger" asp-validation-for="ImgUser"></span>
                    </div>
                
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="Major">Major</label>
                        <input type="text" class="form-control" asp-for="Major">
                        <span class="text-danger" asp-validation-for="Major"></span>
                    </div>
                    @*<div class="d-flex flex-row align-items-start mb-4 flex-column">
                            <div class="d-flex align-items-center w-100">
                                <i class="fas fa-list fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0 w-100">
                                    <select class="form-select" aria-label="Default select example" asp-for="TypeOfRoles" asp-items="Html.GetEnumSelectList<ProjectFutureAdvannced.Models.Enums.TypeOfUser>()">
                                    </select>
                                </div>
                            </div>
                            <span class="text-danger ml" asp-validation-for="TypeOfRoles"></span>
                        </div>*@
                </div>
                <button type="submit" class="btn btn-primary">Save Information</button>
            </form>

        </div>
    </div>
</div>